<!DOCTYPE html>
<html>
<head>
  <title>Trollo</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Trollo", root_path, :class => 'navbar-brand' %>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
          <% if can? :update, current_user %>
          <%= link_to "Profil", show_profile_users_path, :class => 'navbar-link' %> </li>
          <% end %>
          <li><%= link_to "Wyloguj", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
        <% else %>
         <li> <%= link_to "Zaloguj", new_user_session_path, :class => 'navbar-link'  %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
<div class="container-fluid">
  <div class="row">
    <% if user_signed_in? %>
    <%= render "layouts/menu" %>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <% else %>
    <div class="col-sm-12">
    <% end %>
      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>
