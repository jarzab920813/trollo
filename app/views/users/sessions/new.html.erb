<div class="row">
<div class="col-sm-3">
</div>

<div class="col-sm-6">
<h2>Logowanie</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
	<%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: 'E-mail' %>
    <%= f.input :password, required: false, label: 'Hasło' %>
    <%= f.input :remember_me, label: 'Zapamiętaj mnie', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Zaloguj" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>

<div class="col-sm-3">
</div>