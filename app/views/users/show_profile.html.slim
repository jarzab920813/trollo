p.notice
  h1.page-header Dane profilu
  table#users.table.table-striped
    thead
      tr
        td Imie
        td[colspan = 2] =@user.name
      tr
        td Nazwisko
        td[colspan = 2] =@user.surname
      tr
        td E-mail
        td[colspan = 2] =@user.email
      tr
        td Uprawnienia
        td =@user.admin
      td = link_to 'Edytuj', edit_profile_users_path, class: "btn btn-warning"
      td = link_to "Usuń", destroy_confirm_users_path, class: "btn btn-danger"
      td = link_to 'Powrót',:back, class: "btn btn-primary "
  / td =link_to "Usuń", admin_destroy_user_path(user), method: :delete, data: { confirm: "Czy na pewno chcesz usunąć użytkownika" }, class: "btn btn-danger"
  / td = link_to 'Edytuj', edit_user_path(user), class: "btn btn-warning"
      
      

      
      

    
